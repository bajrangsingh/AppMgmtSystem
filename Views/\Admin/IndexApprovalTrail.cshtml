@model IEnumerable<ApprovalPortal.Models.Masters>
@{
    ViewBag.Title = "IndexFinalEmailUsers";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<h2> Approval Trail </h2>
<div class="form-row">
    <div class=" form-group col-md-2">
        @Html.ActionLink(" Create New", "AddEditApprovalTrail", "Admin", null, new { @class = " fa fa-plus" })
    </div>
    <div class=" form-group col-md-2" style="margin-right:0px;">
         @Html.ActionLink(" Export to Excel", "Downloadexcel_AllApprovalTrailsWithUsers", "Admin", new { Style = "color:Green!important" }, new { @class = "fas fa-arrow-alt-circle-down" })
    </div>


</div>



<p>
   
</p>
<table class="table" id="tblDatatable">
    <thead>
        <tr>

            <th>
                @Html.Label("Approval Trail Name")
            </th>
            <th>
                @Html.Label("Active")
            </th>

            <th>
                @Html.Label("Created By")
            </th>
            <th>
                @Html.Label("Created On")
            </th>

            <th>
                @Html.Label("Updated By")
            </th>
            <th>
                @Html.Label("Updated On")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.ID)
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedByName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedOn)
                </td>
                <td>
                    @Html.ActionLink("Edit", "AddEditApprovalTrail", new { ID = item.ID })
                    @Html.ActionLink("View", "IndexApprovalTrailUsers", new { AT_ID = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
