@model IEnumerable<ApprovalPortal.Models.ApprovalNotes>
@using NonFactors.Mvc.Grid
<style>
    .collapse {
        display: none;
    }

    .bolded {
        font-weight: bold;
    }
    .width05 {
        width: 5%;
    }
    .width10 {
        width: 10%;
    }
    .width20
    {
        width:20%;
    }
    .width30 {
        width: 30%;
    }
    .width85 {
        width: 85%;
    }
</style>
<script>
  
</script>
<div style="width:100%;">
    @if(Model != null)
    { 
      <table class="table">
        <tr>
            <th style="width:60%">
                @Html.DisplayName("Notes Description")
            </th>
            <th style="width:15%">
                @Html.DisplayName("Date")
            </th>
            <th style="width:15%">
                @Html.DisplayName("Added By")
            </th>

            <th style="width:10%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.AN_Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AN_AddedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                        @{
                        ApprovalPortal.Models.Users usr = (ApprovalPortal.Models.Users)Session["loginEmp"];
                        {
                            if(item.AN_PersonnelNo==usr.US_PersonnelNo)
                            {
                                @Html.ActionLink("Edit", "ViewNotes", new { app_id = item.AN_APP_ID, AN_ID = item.AN_ID }, null)  @Html.DisplayName("|")
                                @Html.ActionLink("Delete", "DeleteNotes", new { app_id = item.AN_APP_ID, AN_ID = item.AN_ID }, new { onclick = "return confirm('Are you sure you wish to delete this Notes?');" })       
                            }
                        }
                        }
                </td>
            </tr>
        }

    </table> 
    }

</div>


